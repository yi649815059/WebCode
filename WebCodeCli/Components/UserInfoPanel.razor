@using WebCodeCli.Domain.Domain.Model

@if (Show)
{
    <div class="mb-1 pb-1 border-b border-gray-200 flex items-center gap-2 flex-shrink-0 bg-gray-50 rounded-lg p-1.5 shadow-sm">
        <div class="flex-1 relative min-w-0">
                <select @bind="SelectedToolId" 
                    @bind:after="HandleToolChangedAsync"
                    class="w-full px-2 sm:px-3 py-1.5 sm:py-2 pr-7 sm:pr-9 border border-gray-200 rounded-lg focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500 text-xs sm:text-sm font-medium bg-white hover:border-gray-400 transition-all shadow-sm hover:shadow-md appearance-none cursor-pointer">
                @foreach (var tool in AvailableTools)
                {
                    <option value="@tool.Id">@tool.Name - @tool.Description</option>
                }
            </select>
            <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                <svg class="w-3 h-3 sm:w-4 sm:h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>

        <a href="@GitHubUrl"
           target="_blank"
           rel="noopener noreferrer"
           class="btn-default text-[10px] sm:text-xs flex items-center gap-1 shadow-sm hover:shadow-md transition-shadow px-2 py-1 sm:py-1.5 flex-shrink-0"
           title="@GitHubTitle">
            <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
            <span class="hidden sm:inline">@GitHubText</span>
        </a>
        @if (ShowClearChatButton)
        {
            <button @onclick="OnClearChat"
                    class="btn-default text-[10px] sm:text-xs flex items-center gap-1 shadow-sm hover:shadow-md transition-shadow px-2 py-1 sm:py-1.5 flex-shrink-0"
                    title="@ClearChatText">
                <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                <span class="hidden sm:inline">@ClearChatText</span>
            </button>
        }
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public IReadOnlyList<CliToolConfig> AvailableTools { get; set; } = Array.Empty<CliToolConfig>();
    [Parameter] public string SelectedToolId { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> SelectedToolIdChanged { get; set; }
    [Parameter] public EventCallback OnToolChanged { get; set; }

    [Parameter] public string GitHubUrl { get; set; } = string.Empty;
    [Parameter] public string GitHubTitle { get; set; } = string.Empty;
    [Parameter] public string GitHubText { get; set; } = "GitHub";
    [Parameter] public string ClearChatText { get; set; } = string.Empty;
    [Parameter] public bool ShowClearChatButton { get; set; } = true;
    [Parameter] public EventCallback OnClearChat { get; set; }

    private async Task HandleToolChangedAsync()
    {
        await SelectedToolIdChanged.InvokeAsync(SelectedToolId);
        await OnToolChanged.InvokeAsync();
    }
}
