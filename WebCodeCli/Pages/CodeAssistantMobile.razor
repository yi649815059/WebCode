@page "/m/code-assistant"
@page "/mobile/code-assistant"
@namespace WebCodeCli.Pages
@using WebCodeCli.Domain.Domain.Model
@using System.Text
@using WebCodeCli.Pages
@using WebCodeCli.Components
@using WebCodeCli.Helpers
@inject IJSRuntime JSRuntime

<PageTitle>@T("codeAssistant.title")</PageTitle>

<div class="flex flex-col h-screen bg-gray-50 overflow-hidden select-none" style="height: 100dvh;">
    <!-- 顶部Header -->
    <header class="flex-shrink-0 h-14 bg-white border-b border-gray-200 flex items-center px-4 gap-3 shadow-sm safe-area-top">
        <!-- 菜单按钮 -->
        <button @onclick="ToggleSessionDrawer" 
                class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-100 active:bg-gray-200 transition-colors"
                title="@T("codeAssistant.sessionHistory")">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
        
        <!-- 会话标题 -->
        <div class="flex-1 min-w-0">
            <h1 class="text-base font-bold text-gray-800 truncate">
                @(_currentSession?.Title ?? T("codeAssistant.newSession"))
            </h1>
            <p class="text-xs text-gray-500 truncate">
                @GetCurrentToolName()
            </p>
        </div>
        
        <!-- 新建会话按钮 -->
        <button @onclick="CreateNewSession" 
                class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-100 active:bg-gray-200 transition-colors"
                title="@T("codeAssistant.newSession")">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </button>
    </header>
    
    <!-- 主内容区 -->
    <main class="flex-1 overflow-hidden relative">
        @switch(_activeTab)
        {
            case "chat":
                @RenderChatView()
                break;
            case "output":
                @RenderOutputView()
                break;
            case "files":
                @RenderFilesView()
                break;
            case "preview":
                @RenderPreviewView()
                break;
            case "settings":
                @RenderSettingsView()
                break;
        }
    </main>
    
    <!-- FAB浮动按钮 -->
    @if (_activeTab == "chat" && !_isLoading)
    {
        <button @onclick="FocusInputAndScroll"
                class="fixed right-4 z-40 w-14 h-14 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 text-white rounded-full shadow-lg hover:shadow-xl transition-all flex items-center justify-center active:scale-95"
                style="bottom: calc(4rem + 80px + env(safe-area-inset-bottom, 0px));">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
        </button>
    }
    
    <!-- PWA 安装提示横幅 (显示在底部Tab栏上方) -->
    @if ((_showPwaInstallPrompt || _showIosPwaGuide) && !_isPwaInstalled)
    {
        <div class="flex-shrink-0 bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-white text-xs font-medium">@T("pwa.addToHomeScreen")</p>
                    @if (_isIosDevice)
                    {
                        <p class="text-white/70 text-[10px]">@T("pwa.iosStep1") → @T("pwa.iosStep2")</p>
                    }
                    else
                    {
                        <p class="text-white/70 text-[10px]">@T("pwa.installDescription")</p>
                    }
                </div>
                @if (_showPwaInstallPrompt && !_isIosDevice)
                {
                    <button @onclick="TriggerPwaInstall"
                            class="flex-shrink-0 px-3 py-1.5 bg-white text-blue-600 rounded-lg text-xs font-semibold">
                        @T("pwa.install")
                    </button>
                }
                <button @onclick="DismissIosPwaGuide"
                        class="flex-shrink-0 w-6 h-6 flex items-center justify-center text-white/60 hover:text-white">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    }
    
    <!-- 底部Tab栏 -->
    <nav class="flex-shrink-0 bg-white border-t border-gray-200 safe-area-bottom">
        <div class="flex items-center justify-around h-16">
            @foreach (var tab in _tabs)
            {
                <button @onclick="() => SwitchTab(tab.Key)"
                        class="flex-1 flex flex-col items-center justify-center h-full gap-1 transition-colors @(tab.Key == _activeTab ? "text-blue-600" : "text-gray-500 active:text-gray-700")">
                    <div class="relative">
                        @((MarkupString)tab.Icon)
                        @if (tab.Key == "output" && _isLoading)
                        {
                            <span class="absolute -top-1 -right-1 w-2 h-2 bg-blue-500 rounded-full animate-pulse"></span>
                        }
                    </div>
                    <span class="text-xs font-medium">@tab.Label</span>
                </button>
            }
        </div>
    </nav>
</div>

<!-- 会话抽屉 -->
@if (_showSessionDrawer)
{
    <div class="fixed inset-0 z-50" @onclick="CloseSessionDrawer">
        <!-- 遮罩 -->
        <div class="absolute inset-0 bg-black/50 transition-opacity"></div>
        <!-- 抽屉内容 -->
        <div class="absolute left-0 top-0 bottom-0 w-4/5 max-w-sm bg-white shadow-2xl transform transition-transform duration-300 ease-out flex flex-col"
             @onclick:stopPropagation="true">
            <!-- 抽屉头部 -->
            <div class="flex-shrink-0 h-14 flex items-center justify-between px-4 border-b border-gray-200 bg-gray-50 safe-area-top">
                <h2 class="text-lg font-bold text-gray-800 flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @T("codeAssistant.sessionHistory")
                </h2>
                <button @onclick="CloseSessionDrawer" 
                        class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-200 active:bg-gray-300 transition-colors">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- 新建会话按钮 -->
            <div class="flex-shrink-0 p-4 border-b border-gray-200">
                <button @onclick="CreateNewSessionFromDrawer" 
                        class="w-full btn-primary flex items-center justify-center gap-2 py-3 rounded-xl shadow-md active:scale-[0.98] transition-transform">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    @T("codeAssistant.newSession")
                </button>
            </div>
            
            <!-- 会话列表 -->
            <div class="flex-1 overflow-y-auto">
                @if (_isLoadingSessions)
                {
                    <div class="flex items-center justify-center py-12">
                        <div class="animate-spin rounded-full h-8 w-8 border-3 border-gray-300 border-t-blue-600"></div>
                    </div>
                }
                else if (_sessions.Any())
                {
                    <div class="divide-y divide-gray-100">
                        @foreach (var session in _sessions)
                        {
                            <div class="flex items-center px-4 py-3 hover:bg-gray-50 active:bg-gray-100 transition-colors @(_currentSession?.SessionId == session.SessionId ? "bg-blue-50 border-l-4 border-blue-500" : "")"
                                 @onclick="async () => await LoadSessionFromDrawer(session.SessionId)">
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-semibold text-sm text-gray-800 truncate">@session.Title</h3>
                                    <p class="text-xs text-gray-500 mt-0.5">@FormatDateTime(session.UpdatedAt)</p>
                                </div>
                                <div class="flex items-center gap-1 flex-shrink-0 ml-2">
                                    <button @onclick:stopPropagation="true" 
                                            @onclick="() => ShowDeleteSessionConfirm(session)"
                                            class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-red-100 active:bg-red-200 transition-colors">
                                        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="flex flex-col items-center justify-center py-12 text-gray-400">
                        <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                        </svg>
                        <p class="text-sm font-medium">@T("codeAssistant.noSessions")</p>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- 删除会话确认对话框 -->
@if (_showDeleteSessionDialog && _sessionToDelete != null)
{
    <div class="fixed inset-0 z-[60] flex items-end justify-center" @onclick="CloseDeleteSessionDialog">
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="relative w-full max-w-lg bg-white rounded-t-3xl shadow-2xl p-6 pb-8 safe-area-bottom transform transition-transform"
             @onclick:stopPropagation="true">
            <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-6"></div>
            <h3 class="text-lg font-bold text-gray-800 mb-2">@T("codeAssistant.confirmDelete")</h3>
            <p class="text-sm text-gray-600 mb-4">@T("codeAssistant.deleteSessionWarning")</p>
            <div class="bg-gray-50 rounded-xl p-3 mb-6">
                <p class="font-medium text-gray-800 truncate">@_sessionToDelete.Title</p>
                <p class="text-xs text-gray-500 mt-1">@_sessionToDelete.Messages.Count @T("codeAssistant.messagesCount")</p>
            </div>
            <div class="flex gap-3">
                <button @onclick="CloseDeleteSessionDialog"
                        class="flex-1 py-3 px-4 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 active:bg-gray-100 transition-colors">
                    @T("common.cancel")
                </button>
                <button @onclick="DeleteSessionConfirmed"
                        disabled="@_isDeletingSession"
                        class="flex-1 py-3 px-4 bg-red-500 hover:bg-red-600 active:bg-red-700 text-white rounded-xl font-medium transition-colors disabled:opacity-50 flex items-center justify-center gap-2">
                    @if (_isDeletingSession)
                    {
                        <div class="animate-spin h-4 w-4 border-2 border-white rounded-full border-t-transparent"></div>
                    }
                    @T("common.delete")
                </button>
            </div>
        </div>
    </div>
}

<!-- 代码预览模态框 -->
<CodePreviewModal @ref="_codePreviewModal" />

<!-- 环境变量配置模态框 -->
<EnvironmentVariableConfigModal @ref="_envConfigModal" />

<!-- 更新提示模态框 -->
<UpdateNotificationModal @ref="_updateNotificationModal" />

<!-- 文件操作菜单 -->
@if (_showFileActionSheet && _selectedFileNode != null)
{
    <div class="fixed inset-0 z-50 flex items-end justify-center" @onclick="CloseFileActionSheet">
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="relative w-full max-w-lg bg-white rounded-t-3xl shadow-2xl safe-area-bottom transform transition-transform"
             @onclick:stopPropagation="true">
            <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mt-3 mb-2"></div>
            <div class="px-4 py-3 border-b border-gray-100">
                <p class="font-semibold text-gray-800 truncate">@_selectedFileNode.Name</p>
                <p class="text-xs text-gray-500 truncate">@_selectedFileNode.Path</p>
            </div>
            <div class="py-2">
                @if (_selectedFileNode.Type == "file")
                {
                    <button @onclick="PreviewSelectedFile"
                            class="w-full flex items-center gap-4 px-4 py-3 hover:bg-gray-50 active:bg-gray-100 transition-colors">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span class="font-medium text-gray-800">@T("codeAssistant.previewCode")</span>
                    </button>
                    <button @onclick="DownloadSelectedFile"
                            class="w-full flex items-center gap-4 px-4 py-3 hover:bg-gray-50 active:bg-gray-100 transition-colors">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        <span class="font-medium text-gray-800">@T("codeAssistant.downloadFile")</span>
                    </button>
                    @if (_selectedFileNode.IsHtml)
                    {
                        <button @onclick="PreviewHtmlFile"
                                class="w-full flex items-center gap-4 px-4 py-3 hover:bg-gray-50 active:bg-gray-100 transition-colors">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                            </svg>
                            <span class="font-medium text-gray-800">@T("codeAssistant.previewHtml")</span>
                        </button>
                    }
                }
                <button @onclick="DeleteSelectedFileNode"
                        class="w-full flex items-center gap-4 px-4 py-3 hover:bg-red-50 active:bg-red-100 transition-colors">
                    <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <span class="font-medium text-red-600">@T("common.delete")</span>
                </button>
            </div>
            <div class="px-4 pb-4">
                <button @onclick="CloseFileActionSheet"
                        class="w-full py-3 bg-gray-100 hover:bg-gray-200 active:bg-gray-300 rounded-xl font-medium text-gray-700 transition-colors">
                    @T("common.cancel")
                </button>
            </div>
        </div>
    </div>
}

@* 聊天视图 *@
@{
    RenderFragment RenderChatView() => __builder =>
    {
        <div class="flex flex-col h-full">
            <!-- 消息列表 -->
            <div id="mobile-chat-messages" class="flex-1 overflow-y-auto px-4 py-3 space-y-3" style="padding-bottom: calc(4rem + 120px + env(safe-area-inset-bottom, 0px));">
                @if (!_messages.Any() && !_isLoading)
                {
                    <!-- 空状态 -->
                    <div class="flex flex-col items-center justify-center h-full text-gray-400 py-12">
                        <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                        </div>
                        <p class="text-base font-medium text-gray-600">@T("codeAssistant.startConversation")</p>
                        <p class="text-sm text-gray-400 mt-1">@T("codeAssistant.inputPlaceholder")</p>
                    </div>
                }
                else
                {
                    @foreach (var message in _messages)
                    {
                        <div class="@(message.Role == "user" ? "flex justify-end" : "flex justify-start")">
                            <div class="@(message.Role == "user" 
                                          ? "bg-blue-600 text-white rounded-2xl rounded-br-md max-w-[85%]" 
                                          : "bg-white border border-gray-200 text-gray-800 rounded-2xl rounded-bl-md max-w-[85%] shadow-sm") px-4 py-3">
                                @if (message.HasError)
                                {
                                    <div class="text-red-500 text-sm">@message.ErrorMessage</div>
                                }
                                else
                                {
                                    <div class="text-sm leading-relaxed break-words whitespace-pre-wrap message-bubble">
                                        @if (message.Role == "user")
                                        {
                                            @message.Content
                                        }
                                        else
                                        {
                                            @RenderMarkdown(message.Content)
                                        }
                                    </div>
                                }
                                <div class="@(message.Role == "user" ? "text-blue-200" : "text-gray-400") text-xs mt-1 text-right">
                                    @message.CreatedAt.ToString("HH:mm")
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (_isLoading)
                    {
                        <div class="flex justify-start">
                            <div class="bg-white border border-gray-200 text-gray-800 rounded-2xl rounded-bl-md max-w-[85%] shadow-sm px-4 py-3">
                                @if (!string.IsNullOrEmpty(_currentAssistantMessage))
                                {
                                    <div class="text-sm leading-relaxed break-words message-bubble">@RenderMarkdown(_currentAssistantMessage)</div>
                                }
                                else
                                {
                                    <div class="flex items-center gap-2">
                                        <div class="flex gap-1">
                                            <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
                                            <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
                                            <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
                                        </div>
                                        <span class="text-sm text-gray-500">@T("codeAssistant.thinking")</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
            
            <!-- 固定底部输入区 -->
            <div class="fixed bottom-16 left-0 right-0 bg-white border-t border-gray-200 p-3 safe-area-bottom z-30">
                <!-- 快捷操作按钮 -->
                <div class="flex items-center gap-2 mb-2 overflow-x-auto pb-1 -mx-1 px-1 scrollbar-hide">
                    <button @onclick="ToggleQuickActions"
                            class="flex-shrink-0 px-3 py-1.5 bg-gray-100 hover:bg-gray-200 active:bg-gray-300 rounded-full text-xs font-medium text-gray-700 flex items-center gap-1 transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        @T("codeAssistant.quickActions")
                    </button>
                    <label class="flex-shrink-0 px-3 py-1.5 bg-gray-100 hover:bg-gray-200 active:bg-gray-300 rounded-full text-xs font-medium text-gray-700 flex items-center gap-1 transition-colors cursor-pointer">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                        </svg>
                        @T("codeAssistant.uploadFile")
                        <InputFile OnChange="HandleFileUpload" disabled="@_isUploading" class="hidden" />
                    </label>
                </div>
                
                <!-- 快捷操作面板 -->
                @if (_showQuickActions)
                {
                    <div class="mb-2">
                        <QuickActionsPanel @ref="_quickActionsPanel" OnActionSelected="OnQuickActionSelected" DefaultCollapsed="false" />
                    </div>
                }
                
                <!-- 技能选择器弹出层 -->
                @if (_showSkillPicker)
                {
                    <div class="mb-2 bg-white rounded-xl shadow-lg border border-gray-200 max-h-60 overflow-hidden animate-slideUp">
                        <div class="px-3 py-2 border-b border-gray-200 bg-gray-50 sticky top-0">
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                </svg>
                                <span class="text-sm font-semibold text-gray-800">@T("codeAssistant.selectSkill")</span>
                                <span class="text-xs text-gray-500 ml-auto">@GetFilteredSkills().Count / @_skills.Count</span>
                                @if (!string.IsNullOrEmpty(_skillFilter))
                                {
                                    <span class="text-xs text-blue-600 font-medium">@_skillFilter</span>
                                }
                            </div>
                        </div>
                        <div class="overflow-y-auto max-h-48">
                            @if (GetFilteredSkills().Any())
                            {
                                @foreach (var skill in GetFilteredSkills())
                                {
                                    <div @onclick="() => SelectSkill(skill)"
