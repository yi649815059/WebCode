<!-- 模板变量输入对话框 -->
@if (_showVariableInputDialog && _templateWithVariables != null)
{
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4" @onclick="CloseVariableInputDialog">
        <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden transform transition-all" @onclick:stopPropagation="true">
            <!-- 头部 -->
            <div class="flex items-center justify-between p-6 border-b-2 border-gray-200 bg-gradient-to-r from-purple-50 to-white">
                <h3 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                    <span class="text-2xl">@_templateWithVariables.Icon</span>
                    <span>填写模板变量</span>
                </h3>
                <button @onclick="CloseVariableInputDialog" class="p-2 hover:bg-gray-200 rounded-lg transition-colors">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- 模板信息 -->
            <div class="px-6 pt-4 pb-2 bg-gray-50 border-b border-gray-200">
                <div class="flex items-center gap-2 mb-2">
                    <span class="text-sm font-semibold text-gray-700">模板：</span>
                    <span class="text-sm text-gray-800">@_templateWithVariables.Title</span>
                </div>
                <div class="text-xs text-gray-500 bg-white rounded-lg p-3 border border-gray-200 max-h-24 overflow-y-auto">
                    <pre class="whitespace-pre-wrap font-mono">@_templateWithVariables.Content</pre>
                </div>
            </div>

            <!-- 变量输入区域 -->
            <div class="p-6 overflow-y-auto space-y-4" style="max-height: calc(90vh - 300px);">
                <div class="flex items-center gap-2 mb-2">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <span class="text-sm font-semibold text-gray-700">请填写以下 @_templateWithVariables.Variables.Count 个变量：</span>
                </div>

                @foreach (var variable in _templateWithVariables.Variables)
                {
                    <div class="space-y-2">
                        <label class="flex items-center gap-2 text-sm font-medium text-gray-700">
                            <span class="w-6 h-6 bg-purple-100 text-purple-700 rounded-full flex items-center justify-center text-xs font-bold">
                                @(_templateWithVariables.Variables.IndexOf(variable) + 1)
                            </span>
                            <code class="bg-purple-50 text-purple-700 px-2 py-0.5 rounded font-mono text-xs">{{@variable}}</code>
                        </label>
                        <textarea @bind="_variableValues[variable]"
                                  @bind:event="oninput"
                                  rows="3"
                                  placeholder="@($"请输入 {variable} 的值...")"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 text-sm resize-none bg-white"></textarea>
                    </div>
                }
            </div>

            <!-- 底部按钮 -->
            <div class="flex items-center justify-end gap-3 p-6 border-t border-gray-200 bg-gray-50">
                <button @onclick="CloseVariableInputDialog" class="btn-default px-6 py-2.5">
                    取消
                </button>
                <button @onclick="ApplyTemplateWithVariables" 
                        disabled="@(_variableValues.Any(v => string.IsNullOrWhiteSpace(v.Value)))"
                        class="btn-primary px-6 py-2.5 flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    应用模板
                </button>
            </div>
        </div>
    </div>
}

