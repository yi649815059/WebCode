@page "/code-assistant"
@namespace WebCodeCli.Pages
@using WebCodeCli.Domain.Domain.Model
@using System.Text
@using WebCodeCli.Pages
@using WebCodeCli.Components
@using WebCodeCli.Helpers
@inject IJSRuntime JSRuntime

<PageTitle>@T("codeAssistant.title")</PageTitle>

<!-- 移动端折叠/展开按钮 (固定在屏幕中间右侧) -->
<button @onclick="TogglePreviewPanel"
        class="lg:hidden fixed top-1/2 right-2 -translate-y-1/2 z-50 w-10 h-10 bg-gray-800 hover:bg-black text-white rounded-full shadow-md hover:shadow-lg transition-all flex items-center justify-center active:scale-95"
        title="@(_isPreviewCollapsed ? T("codeAssistant.expandPreview") : T("codeAssistant.collapsePreview"))">
    @if (_isPreviewCollapsed) 
    {
        <!-- 展开图标 (向上箭头) -->
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
    }
    else
    {
        <!-- 折叠图标 (向下箭头) -->
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
    }
</button>

<div id="code-assistant-split-container" class="flex flex-col lg:flex-row h-screen bg-gray-50 overflow-hidden" @key="_currentLanguage">
    <!-- 会话列表侧边栏（桌面端） -->
    @if (_showSessionList)
    {
        <div class="hidden lg:block fixed inset-y-0 left-0 w-80 bg-white shadow-2xl z-50 transform transition-transform duration-300 ease-in-out">
            <!-- 头部 -->
            <div class="p-4 border-b-2 border-gray-200 flex items-center justify-between bg-gray-50">
                <h2 class="text-lg font-bold text-gray-800 flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @T("codeAssistant.sessionHistory")
                </h2>
                <button @onclick="ToggleSessionList" class="p-2 hover:bg-gray-200 rounded-lg transition-colors" title="@T("common.close")">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- 新建会话按钮和多选模式切换 -->
            <div class="p-4 border-b border-gray-200">
                @if (_isSessionMultiSelectMode)
                {
                    <!-- 多选模式工具栏 -->
                    <div class="flex items-center gap-2">
                        <button @onclick="ToggleSelectAllSessions" 
                                class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors flex items-center justify-center gap-2"
                                title="@(_selectedSessionIds.Count == _sessions.Count ? T("codeAssistant.deselectAll") : T("common.selectAll"))">
                            @if (_selectedSessionIds.Count == _sessions.Count && _sessions.Count > 0)
                            {
                                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>@T("codeAssistant.deselectAll")</span>
                            }
                            else
                            {
                                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>@T("common.selectAll")</span>
                            }
                        </button>
                        <button @onclick="ShowBatchSessionDeleteDialog" 
                                disabled="@(_selectedSessionIds.Count == 0)"
                                class="px-3 py-2 text-sm bg-red-500 text-white rounded-lg hover:bg-red-600 disabled:opacity-50 disabled:cursor-not-allowed transition-colors flex items-center gap-2"
                                title="@T("codeAssistant.batchDelete")">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <span>@T("codeAssistant.batchDelete") (@_selectedSessionIds.Count)</span>
                        </button>
                        <button @onclick="ToggleSessionMultiSelectMode" 
                                class="px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
                                title="@T("common.cancel")">
                            @T("common.cancel")
                        </button>
                    </div>
                }
                else
                {
                    <!-- 普通模式按钮 -->
                    <div class="flex items-center gap-2">
                        <button @onclick="CreateNewSession" class="flex-1 btn-primary flex items-center justify-center gap-2 py-3 shadow-md hover:shadow-lg transition-all">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            @T("codeAssistant.newSession")
                        </button>
                        @if (_sessions.Count > 0)
                        {
                            <button @onclick="ToggleSessionMultiSelectMode" 
                                    class="p-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
                                    title="@T("codeAssistant.multiSelect")">
                                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                                </svg>
                            </button>
                        }
                    </div>
                }
            </div>
            
            <!-- 会话列表滚动区域 -->
            <div class="flex-1 overflow-y-auto" style="height: calc(100vh - 180px);">
                @if (_isLoadingSessions)
                {
                    <!-- 加载动画 -->
                    <div class="p-8 text-center">
                        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-gray-300 border-t-gray-700 mb-4"></div>
                        <p class="text-sm text-gray-500">@T("common.loading")</p>
                    </div>
                }
                else if (_sessions.Any())
                {
                    <div class="p-2 space-y-1">
                        @foreach (var session in _sessions)
                        {
                            <div class="@GetSessionItemClass(session) @(_isLoadingSession && _currentSession?.SessionId == session.SessionId ? "opacity-50 pointer-events-none" : "")" 
                                 @onclick="@(async () => { if (_isSessionMultiSelectMode) ToggleSessionSelection(session.SessionId); else await LoadSession(session.SessionId); })"
                                 style="transition: all 0.2s ease-in-out;">
                                @if (_isSessionMultiSelectMode)
                                {
                                    <!-- 多选模式下显示复选框 -->
                                    <div class="flex items-center mr-2" @onclick:stopPropagation="true">
                                        <input type="checkbox" 
                                               checked="@_selectedSessionIds.Contains(session.SessionId)"
                                               @onchange="@(() => ToggleSessionSelection(session.SessionId))"
                                               class="w-4 h-4 text-gray-800 border-gray-300 rounded focus:ring-gray-500 cursor-pointer" />
                                    </div>
                                }
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-semibold truncate text-sm">@session.Title</h3>
                                    <p class="text-xs text-gray-500 mt-1">@FormatDateTime(session.UpdatedAt)</p>
                                </div>
                                <div class="flex items-center gap-1 flex-shrink-0">
                                    @if (_isLoadingSession && _currentSession?.SessionId == session.SessionId)
                                    {
                                        <!-- 加载中指示器 -->
                                        <div class="inline-block animate-spin rounded-full h-4 w-4 border-2 border-gray-300 border-t-gray-700"></div>
                                    }
                                    else if (!_isSessionMultiSelectMode)
                                    {
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowShareDialog(session)" class="p-1.5 hover:bg-indigo-100 rounded-lg transition-colors" title="分享会话">
                                            <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                                            </svg>
                                        </button>
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowRenameDialog(session)" class="p-1.5 hover:bg-gray-100 rounded-lg transition-colors" title="@T("codeAssistant.renameSession")">
                                            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowDeleteDialog(session)" class="p-1.5 hover:bg-red-100 rounded-lg transition-colors" title="@T("common.delete")">
                                            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="p-8 text-center text-gray-400">
                        <div class="w-20 h-20 bg-gray-100 border border-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 shadow-md">
                            <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                            </svg>
                        </div>
                        <p class="text-base font-semibold text-gray-600">@T("codeAssistant.noSessions")</p>
                        <p class="text-sm mt-2 text-gray-500">@T("codeAssistant.createSessionHint")</p>
                    </div>
                }
            </div>
        </div>
        
        <!-- 移动端全屏模态框 -->
        <div class="lg:hidden fixed inset-0 bg-white z-50 flex flex-col">
            <!-- 头部 -->
            <div class="p-4 border-b-2 border-gray-200 flex items-center justify-between bg-gray-50 flex-shrink-0">
                <h2 class="text-lg font-bold text-gray-800 flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @T("codeAssistant.sessionHistory")
                </h2>
                <button @onclick="ToggleSessionList" class="p-2 hover:bg-gray-200 rounded-lg transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center" title="@T("common.close")">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <!-- 新建会话按钮和多选模式切换 -->
            <div class="p-4 border-b border-gray-200 flex-shrink-0">
                @if (_isSessionMultiSelectMode)
                {
                    <!-- 多选模式工具栏 -->
                    <div class="flex flex-col gap-2">
                        <div class="flex items-center gap-2">
                            <button @onclick="ToggleSelectAllSessions" 
                                    class="flex-1 px-3 py-3 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition-colors flex items-center justify-center gap-2 min-h-[44px]"
                                    title="@(_selectedSessionIds.Count == _sessions.Count ? T("codeAssistant.deselectAll") : T("common.selectAll"))">
                                @if (_selectedSessionIds.Count == _sessions.Count && _sessions.Count > 0)
                                {
                                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span>@T("codeAssistant.deselectAll")</span>
                                }
                                else
                                {
                                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span>@T("common.selectAll")</span>
                                }
                            </button>
                            <button @onclick="ToggleSessionMultiSelectMode" 
                                    class="px-4 py-3 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition-colors min-h-[44px]"
                                    title="@T("common.cancel")">
                                @T("common.cancel")
                            </button>
                        </div>
                        <button @onclick="ShowBatchSessionDeleteDialog" 
                                disabled="@(_selectedSessionIds.Count == 0)"
                                class="w-full px-3 py-3 text-sm bg-red-500 text-white rounded-lg hover:bg-red-600 active:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors flex items-center justify-center gap-2 min-h-[44px]"
                                title="@T("codeAssistant.batchDelete")">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <span>@T("codeAssistant.batchDelete") (@_selectedSessionIds.Count)</span>
                        </button>
                    </div>
                }
                else
                {
                    <!-- 普通模式按钮 -->
                    <div class="flex items-center gap-2">
                        <button @onclick="CreateNewSession" class="flex-1 btn-primary flex items-center justify-center gap-2 py-3 min-h-[44px] shadow-md hover:shadow-lg transition-all">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            @T("codeAssistant.newSession")
                        </button>
                        @if (_sessions.Count > 0)
                        {
                            <button @onclick="ToggleSessionMultiSelectMode" 
                                    class="p-3 border border-gray-300 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center"
                                    title="@T("codeAssistant.multiSelect")">
                                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                                </svg>
                            </button>
                        }
                    </div>
                }
            </div>
            
            <!-- 会话列表滚动区域 -->
            <div class="flex-1 overflow-y-auto">
                @if (_isLoadingSessions)
                {
                    <!-- 加载动画 -->
                    <div class="p-8 text-center">
                        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-gray-300 border-t-gray-700 mb-4"></div>
                        <p class="text-sm text-gray-500">@T("common.loading")</p>
                    </div>
                }
                else if (_sessions.Any())
                {
                    <div class="p-3 space-y-2">
                        @foreach (var session in _sessions)
                        {
                            <div class="@GetSessionItemClass(session) @(_isLoadingSession && _currentSession?.SessionId == session.SessionId ? "opacity-50 pointer-events-none" : "")" 
                                 @onclick="@(async () => { if (_isSessionMultiSelectMode) ToggleSessionSelection(session.SessionId); else await LoadSession(session.SessionId); })" 
                                 style="min-height: 44px; transition: all 0.2s ease-in-out;">
                                @if (_isSessionMultiSelectMode)
                                {
                                    <!-- 多选模式下显示复选框 -->
                                    <div class="flex items-center mr-3" @onclick:stopPropagation="true">
                                        <input type="checkbox" 
                                               checked="@_selectedSessionIds.Contains(session.SessionId)"
                                               @onchange="@(() => ToggleSessionSelection(session.SessionId))"
                                               class="w-5 h-5 text-gray-800 border-gray-300 rounded focus:ring-gray-500 cursor-pointer" />
                                    </div>
                                }
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-semibold truncate text-sm">@session.Title</h3>
                                    <p class="text-xs text-gray-500 mt-1">@FormatDateTime(session.UpdatedAt)</p>
                                </div>
                                <div class="flex items-center gap-1 flex-shrink-0">
                                    @if (_isLoadingSession && _currentSession?.SessionId == session.SessionId)
                                    {
                                        <!-- 加载中指示器 -->
                                        <div class="inline-block animate-spin rounded-full h-5 w-5 border-2 border-gray-300 border-t-gray-700"></div>
                                    }
                                    else if (!_isSessionMultiSelectMode)
                                    {
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowShareDialog(session)" class="p-2 hover:bg-indigo-100 active:bg-indigo-200 rounded-lg transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center" title="分享会话">
                                            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                                            </svg>
                                        </button>
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowRenameDialog(session)" class="p-2 hover:bg-gray-100 active:bg-gray-200 rounded-lg transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center" title="@T("codeAssistant.renameSession")">
                                            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>
                                        <button @onclick:stopPropagation="true" @onclick="() => ShowDeleteDialog(session)" class="p-2 hover:bg-red-100 active:bg-red-200 rounded-lg transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center" title="@T("common.delete")">
                                            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="p-8 text-center text-gray-400">
                        <div class="w-20 h-20 bg-gray-100 border border-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 shadow-md">
                            <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                            </svg>
                        </div>
                        <p class="text-base font-semibold text-gray-600">@T("codeAssistant.noSessions")</p>
                        <p class="text-sm mt-2 text-gray-500">@T("codeAssistant.createSessionHint")</p>
                    </div>
                }
            </div>
        </div>
    }
    
    <!-- 右侧预览区 -->
    <div id="code-assistant-preview-panel" class="@(_isPreviewCollapsed ? "hidden lg:flex" : "flex") flex-1 bg-white/60 backdrop-blur-sm p-3 sm:p-4 lg:p-6 flex-col overflow-hidden min-w-0 lg:min-w-[420px] transition-all duration-300 relative">
        <!-- Tabs -->
        <div class="mb-3 sm:mb-4 lg:mb-5 border-b-2 border-gray-200 flex-shrink-0 bg-white/80 rounded-t-lg sm:rounded-t-xl -mx-3 sm:-mx-4 lg:-mx-6 px-3 sm:px-4 lg:px-6 overflow-x-auto overflow-y-hidden">
            <nav class="-mb-0.5 flex space-x-1 min-w-max">
                <button @onclick='() => _activeTabKey = "1"'
                        class="@(GetTabClass("1")) whitespace-nowrap py-2 sm:py-3 px-3 sm:px-4 border-b-2 font-semibold text-xs sm:text-sm transition-all rounded-t-lg flex-shrink-0">
