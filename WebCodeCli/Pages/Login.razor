@page "/login"
@namespace WebCodeCli.Pages
@using WebCodeCli.Domain.Domain.Service

<PageTitle>@T("login.pageTitle")</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 via-gray-100 to-gray-200 px-4 py-8">
    <div class="max-w-md w-full">
        <!-- Logo 和标题 -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center mb-4">
                <img src="/images/logo.png" alt="WebCode Logo" class="w-24 h-24 object-contain" />
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">WebCode</h1>
            <p class="text-gray-600">@T("login.subtitle")</p>
        </div>

        <!-- 登录卡片 -->
        <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">@T("login.title")</h2>

            <!-- 错误提示 -->
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="mb-6 bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-lg animate-pulse" role="alert">
                    <div class="flex items-start gap-2">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="block text-sm">@_errorMessage</span>
                    </div>
                </div>
            }

            <!-- 登录表单 -->
            <div class="space-y-5">
                <!-- 用户名 -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            @T("login.username")
                        </div>
                    </label>
                    <input type="text"
                           @bind="_username"
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           placeholder="@T("login.usernamePlaceholder")"
                           disabled="@_isLoading"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent transition-all disabled:bg-gray-100 disabled:cursor-not-allowed shadow-sm hover:border-gray-400"
                           autofocus />
                </div>

                <!-- 密码 -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            @T("login.password")
                        </div>
                    </label>
                    <div class="relative">
                        <input type="@(_showPassword ? "text" : "password")"
                               @bind="_password"
                               @bind:event="oninput"
                               @onkeydown="HandleKeyDown"
                               placeholder="@T("login.passwordPlaceholder")"
                               disabled="@_isLoading"
                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent transition-all disabled:bg-gray-100 disabled:cursor-not-allowed shadow-sm hover:border-gray-400" />
                        <button type="button"
                                @onclick="TogglePasswordVisibility"
                                disabled="@_isLoading"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 transition-colors disabled:opacity-50"
                                title="@(_showPassword ? T("login.hidePassword") : T("login.showPassword"))">
                            @if (_showPassword)
                            {
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                                </svg>
                            }
                            else
                            {
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            }
                        </button>
                    </div>
                </div>

                <!-- 登录按钮 -->
                <button @onclick="HandleLogin"
                        disabled="@_isLoading"
                        class="w-full bg-gradient-to-r from-gray-800 to-black hover:from-black hover:to-gray-900 text-white font-semibold px-6 py-3 rounded-xl shadow-lg hover:shadow-xl transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2">
                    @if (_isLoading)
                    {
                        <div class="animate-spin h-5 w-5 border-2 border-white rounded-full border-t-transparent"></div>
                        <span>@T("login.loggingIn")</span>
                    }
                    else
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                        </svg>
                        <span>@T("login.login")</span>
                    }
                </button>
            </div>
        </div>

        <!-- 页脚 -->
        <div class="mt-8 text-center text-sm text-gray-500">
            <p>@T("login.footer", ("year", DateTime.Now.Year.ToString()))</p>
            <div class="mt-3 flex items-center justify-center gap-4">
                <a href="https://wc.tree456.com/" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center gap-1.5 text-gray-600 hover:text-gray-900 transition-colors"
                   title="官方网站">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                    <span class="hover:underline">官网</span>
                </a>
                <span class="text-gray-400">|</span>
                <a href="https://github.com/xuzeyu91/WebCode" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center gap-1.5 text-gray-600 hover:text-gray-900 transition-colors"
                   title="@T("login.githubTitle")">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="hover:underline">GitHub</span>
                </a>
            </div>
        </div>
    </div>
</div>

